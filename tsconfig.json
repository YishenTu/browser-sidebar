{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,

    /* Interop */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "types": ["vite/client", "chrome"],

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@sidebar/*": ["src/sidebar/*"],
      "@components/*": ["src/sidebar/components/*"],
      "@hooks/*": ["src/sidebar/hooks/*"],
      "@contexts/*": ["src/sidebar/contexts/*"],
      "@ui/*": ["src/sidebar/components/ui/*"],
      "@engine/*": ["src/core/engine/*"],
      "@extension/*": ["src/extension/*"],
      "@content/*": ["src/content/*"],
      "@data/*": ["src/data/*"],
      "@services/*": ["src/services/*"],
      "@types/*": ["src/types/*"],
      "@site/*": ["site-plugins/*"],
      "@store/*": ["src/data/store/*"],
      "@security/*": ["src/data/security/*"],
      "@core/*": ["src/core/*"],
      "@transport/*": ["src/transport/*"],
      "@platform/*": ["src/platform/*"],
      "@config/*": ["src/config/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": ["src", "site-plugins"],
  "exclude": ["node_modules", "dist", "build"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
